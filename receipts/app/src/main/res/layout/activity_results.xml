<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashvin.receipts.MainActivity"
    android:background="@color/startblue"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/graylight"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/person_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="118dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="118dp"
            android:layout_marginRight="0dp"
            android:paddingTop="20dp"
            android:text="Soukarya Ghosh"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/item2"
                android:layout_marginTop="85dp"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/item1"
                android:layout_marginTop="55dp"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />



        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="75dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"

                android:layout_height="36dp"
                android:src="@drawable/ic_group_white_24dp"/>
            <TextView
                android:id="@+id/group_name"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="GroupName"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_avatar_blue" />
            <TextView
                android:id="@+id/member1"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="Payer #1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_avatar_green"/>
            <TextView
                android:id="@+id/member2"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="Payer #2"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_request"
        android:textColor="#fff"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Venmo"/>

    <Button
        android:id="@+id/button_retake"
        android:textColor="#fff"
        android:background="@drawable/buttonstyle_bad"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retake"/>



</LinearLayout>






